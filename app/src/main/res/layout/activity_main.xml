<?xml version="1.0" encoding="utf-8"?>
<!--<androidx.constraintlayout.widget.ConstraintLayout-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

    <!-- Title and Icon -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@color/primaryDark"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/flightIcon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_flight"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flight Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Flight Number Card -->
        <com.google.android.material.card.MaterialCardView
        android:id="@+id/flightCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flight: AI202"
            android:textSize="18sp"
            android:textColor="@color/primaryDark"
            android:textStyle="bold"/>
<!--            android:padding="16dp"-->
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    <!-- Departure Card -->
        <com.google.android.material.card.MaterialCardView
        android:id="@+id/departureCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="Departure"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="BOM - Mumbai"
                android:textSize="16sp"
                android:paddingTop="4dp"
                android:textColor="@color/textSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="10:30 AM"
                android:textSize="16sp"
                android:textColor="#3A3A3A"
                android:paddingTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
</com.google.android.material.card.MaterialCardView>

    <!-- Arrival Card -->
        <com.google.android.material.card.MaterialCardView
        android:id="@+id/arrivalCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="Arrival"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="DEL - Delhi"
                android:textSize="16sp"
                android:paddingTop="4dp"
                android:textColor="@color/textSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="12:50 PM"
                android:textSize="16sp"
                android:paddingTop="4dp"
                android:textColor="#3A3A3A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    <!-- CTA Button -->
        <com.google.android.material.button.MaterialButton
        android:id="@+id/searchFlightsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Flights"
        android:textColor="@android:color/white"
            android:textAllCaps="false"
        android:textStyle="bold"
        android:backgroundTint="#3F51B5"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_flight"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />
    </LinearLayout>
</ScrollView>